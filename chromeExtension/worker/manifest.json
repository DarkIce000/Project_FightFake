{
  "manifest_version": 3,
  "name": "Worker",
  "description": "Frontend Worker",
  "version": "1.0",

  "action": {
    "default_popup": "popup/popup.html", 
    "default_icon": "images/pumpkin.png"
  }, 

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts":[
    {
      "js": [
        "scripts/contentScript.js"
      ], 
      "matches":[
        "https://*.x.com/*"
      ],
      "run_at": "document_end"
    }
  ], 

  "host_permissions":[
    "https://*.x.com/*"
  ],

  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ]
}
